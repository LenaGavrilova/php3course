{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ name }}</h1>

    <table>
        <tr>
            <th>Пн</th>
            <th>Вт</th>
            <th>Ср</th>
            <th>Чт</th>
            <th>Пт</th>
            <th>Сб</th>
            <th>Вс</th>
        </tr>
        {% for week in calendar %}
            <tr>
                {% for day in week %}
                    {% if day == null %}
                        <td></td>
                    {% else %}
                        {% if day.isWeekend %}
                            <td style="color: red;">{{ day.day }}</td>
                        {% else %}
                            <td>{{ day.day }}</td>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
