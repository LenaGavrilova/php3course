{% extends 'base.html.twig' %}

{% block body %}
    <table border="1">
        <h1>{{ name }}</h1>
        <tr>
            <th>Пн</th>
            <th>Вт</th>
            <th>Ср</th>
            <th>Чт</th>
            <th>Пт</th>
            <th>Сб</th>
            <th>Вс</th>
        </tr>
        {% for week in calendar %}
            <tr>
                {% for day in week %}
                    {% if day == null %}
                        <td></td>
                    {% else %}
                        <td>{{ day.day }}</td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
